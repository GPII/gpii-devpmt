<br/>
<div class="grid-x expanded" id="all-prefs">
    <div class="medium-2 cell">
        <div id="productList-container">
            <div id="productList-widget"></div>
        </div>
    </div>
    <div id="settings-divs" class="medium-7 cell">
        <div id="contexts-area" class="callout">
            <h5>{{{message "devptt.contextsHeader"}}}</h5>
            <table class="table-scroll">
                <thead>
                    <tr>
                        <th>{{{message "devptt.contextIDHeader"}}}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {{#each contextNames}}
                    <tr>
                        <td>{{this}}</td>
                        <td><button data-contextId="{{this}}" type="button" class="pmt-delete-context alert button">Delete</button></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div id="genericSettingsTable-container">
            <div id="genericSettingsTable-widget">
            </div>
        </div>
        {{#each npsetApplications}} {{! <-- Is npsetApplications actually dynamic? }}
            <div id="test-comp-{{this.appId}}">
                <div class="settings-table-div"></div>
            </div>

        {{/each}} {{! end npsetApplications }}

        {{#if devModeOn}}
        <hr/>
        <h3>Raw Transformed Flat Preferences <a id="rawTransformedFlatPrefs" href="#top"><small>top</small></a></h3>
        <pre>
            {{{jsonify flatPrefs}}}
        </pre>
        {{/if}}
    </div>
    <div class="medium-3 cell right" data-sticky-container>
        <div class="sticky" data-sticky data-top-anchor="all-prefs">
            <div id="prefs-adjuster-container">
                <div id="prefs-adjuster">
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
    </div>
</div>
