<div id="pmt-settings-filters">
    <p>For Settings show:</p>
    <div class="button-group">
        {{#compare settingsFilter "===" "mysettings" }}
        <button id="pmt-mysettings-button" class="button primary" type="button" >My Settings</button>
        <button id="pmt-allsettings-button" class="button secondary hollow" type="button" >All Settings</button>
        {{else}}
        <button id="pmt-mysettings-button" class="button secondary hollow" type="button" >My Settings</button>
        <button id="pmt-allsettings-button" class="button primary" type="button" >All Settings</button>
        {{/compare}}
    </div>
    <div class="input-group">
        <input id="pmt-settings-search-input" value="{{settingsSearch}}" class="input-group-field" type="text" />
        <div class="input-group-button">
            <button id="pmt-settings-search-button" type="button" class="button" >Settings Search</button>
        </div>
    </div>

    <p>For Products show:</p>
    <div class="button-group">
        {{#compare productsFilter "===" "myproducts" }}
        <button id="pmt-myproducts-button" class="button primary" type="button" >My Products</button>
        <button id="pmt-allproducts-button" class="button hollow secondary" type="button" >All Products</button>
        {{else}}
        <button id="pmt-myproducts-button" class="button hollow secondary" type="button" >My Products</button>
        <button id="pmt-allproducts-button" class="button primary" type="button" >All Products</button>
        {{/compare}}
    </div>
    <div class="input-group">
        <input id="pmt-products-search-input" value="{{productsSearch}}" class="input-group-field" type="text" />
        <div class="input-group-button">
            <button id="pmt-products-search-button" type="button" class="button" >Products Search</button>
        </div>
    </div>
</div>
