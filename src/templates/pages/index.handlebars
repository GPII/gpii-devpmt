<br/>

<article class="grid-container">
    <div class="grid-x grid-margin-x">
        <div class="medium-7 large-6 cell">
            <h1>{{{messageHelper "gpii_pmt_index_title"}}}</h1>
            <p class="subheader">
                {{{messageHelper "gpii_pmt_index_inst"}}}
            </p>
        </div>
        <div class="medium-5 large-3 cell">
            <div class="callout secondary">
                <form action="/add-prefset" method="POST">
                    <div class="grid-x">
                        <div class="small-12 cell">
                            <h3>{{{messageHelper "gpii_pmt_index_tasks"}}}</h3>
                            <input type="submit" href="#" class="button" value="New PrefsSafe" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="">
        <hr/>
    </div>

    <h2>{{{messageHelper "gpii_pmt_index_lookup"}}}</h2>
    <div class="grid-x">
        <div class="cell">
            <form method="POST" action="/ppt-lookup">
                <input type="text" name="lookup" placeholder="Lookup Prefsafe...">
                <input type="submit" value="Search" />
            </form>
        </div>
    </div>
    {{#if perms.listSafes}}
    <hr/>
    <h2>{{{messageHelper "gpii_pmt_prefsSafeTable_title"}}}</h2>
    <div class="grid-x">
        <div class="cell">
            <table class="table">
                <thead>
                    <tr>
                        <th>{{{messageHelper "gpii_pmt_prefsSafeTable_idColHeader"}}}</th>
                        <th>{{{messageHelper "gpii_pmt_prefsSafeTable_nameColHeader"}}}</th>
                        <th>{{{messageHelper "gpii_pmt_prefsSafeTable_emailColHeader"}}}</th>
                        <th>{{{messageHelper "gpii_pmt_prefsSafeTable_createdColHeader"}}}</th>
                        <th>{{{messageHelper "gpii_pmt_prefsSafeTable_updatedColHeader"}}}</th>
                    </tr>
                </thead>
                <tbody>
                {{#each prefsSafesList}}
                    <tr>
                        <td><a href="/editprefs/{{this.id}}">{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.created}}</td>
                        <td>{{this.updated}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{/if}}
</article>
