<article class="grid-container">
    <div class="grid-x grid-margin-x">
        <div class="medium-7 large-6 cell">
            <h1>Power Preferences Tool</h1>
            <p class="subheader">
                Hello! This is a demo of the in-progress Power Preferences Tool.
                Use the box on the right to create a new Preferences Safe, or choose
                from an existing Preferences Safe below to
                start with. After editing the preferences, you can download the
                json file with your changes.
            </p>
        </div>
        <div class="medium-5 large-3 cell">
            <div class="callout secondary">
                <form action="/add-prefset" method="POST">
                    <div class="grid-x">
                        <div class="small-12 cell">
                            <h3>Tasks</h3>
                            <input type="submit" href="#" class="button" value="New PrefsSafe" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="">
        <hr/>
    </div>
    <!-- <div class=""> -->
    <!--     <p class="lead">Snapsets</p> -->
    <!-- </div> -->
    <!-- {{> index-snapsets }} -->


    <!-- {{> index-demo-personas }} -->
    <h2>Look-up Preferences Safe</h2>
    <div class="grid-x">
        <div class="cell">
            <form method="POST" action="/ppt-lookup">
                <input type="text" name="lookup" placeholder="Lookup Prefsafe...">
                <input type="submit" value="Search" />
            </form>
        </div>
    </div>
    {{#if perms.listSafes}}
    <hr/>
    <h2>Preference Safes</h2>
    <div class="grid-x">
        <div class="cell">
            <table class="table">
                <thead>
                    <tr>
                        <th>PrefsSafe ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Created</th>
                        <th>Updated</th>
                    </tr>
                </thead>
                <tbody>
                {{#each prefsSafesList}}
                    <tr>
                        <td><a href="/editprefs/{{this.id}}">{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.created}}</td>
                        <td>{{this.updated}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{/if}}
</article>
